uses DM, System.Math, MidasLib;

//PRODUTOS/MATERIA PRIMA
procedure TForm1.ListaMateriaPrimaProduto;
begin
  DM.DataModule1.CDSListaMateriais.Close;
  DM.DataModule1.CDSListaMateriais.Open;


  DM.DataModule1.QListaMateriaPrimaProdutos.Close;
  DM.DataModule1.QListaMateriaPrimaProdutos.ParamByName('PRODUTO').AsString:= DBEdit4.Text;
  DM.DataModule1.QListaMateriaPrimaProdutos.Open;
  DM.DataModule1.QListaMateriaPrimaProdutos.First;
  DBGrid4.DataSource.DataSet.First;

  while not DM.DataModule1.QListaMateriaPrimaProdutos.Eof do
  begin

     DBGrid4.DataSource.DataSet.First;

     while not DBGrid4.DataSource.DataSet.Eof do
     Begin
       if DBGrid4.DataSource.DataSet.FieldByName('ID').Value = DM.DataModule1.QListaMateriaPrimaProdutos.FieldByName('ID_MATERIA_PRIMA').Value then
       begin

         DM.DataModule1.CDSListaMateriais.Edit;
         DM.DataModule1.CDSListaMateriais.FieldByName('selecao').AsInteger:= 1;
         DBGrid4.DataSource.DataSet.FieldByName('QTDE').AsFloat:= DM.DataModule1.QListaMateriaPrimaProdutos.FieldByName('QTDE_MATERIA_PRIMA').Value;

         DM.DataModule1.CDSListaMateriais.Post;


       end;

       DBGrid4.DataSource.DataSet.Next;

     End;

     DM.DataModule1.QListaMateriaPrimaProdutos.Next;

  end;


end;


procedure TForm1.AlterarListaMateriaPrimaProduto;
begin

  DM.DataModule1.QDeletMateriaPrimaProduto.ParamByName('PRODUTO').AsString:= DBEdit4.Text;
  DM.DataModule1.QDeletMateriaPrimaProduto.ExecSQL;

end;



procedure TForm1.InsertMateriaPrimaProduto;
var
  I : integer;
begin
  DBGrid4.DataSource.DataSet.First;
  while not DBGrid4.DataSource.DataSet.Eof do
  begin
      if DBGrid4.Columns[0].Field.Text = '1' then
      begin

        //ShowMessage(DBGrid4.Columns[1].Field.Text);
        DM.DataModule1.QMAX_ID_MATERIA_PRODUTOS.Close;
        DM.DataModule1.QMAX_ID_MATERIA_PRODUTOS.Open;
        DM.DataModule1.QInsertProdutosMaterias.ParamByName('ID').AsInteger:= DM.DataModule1.QMAX_ID_MATERIA_PRODUTOS.FieldByName('GEN_ID').Value;
        DM.DataModule1.QInsertProdutosMaterias.ParamByName('ID_PRODUTO').AsString := DBEdit4.Text;
        DM.DataModule1.QInsertProdutosMaterias.ParamByName('ID_MATERIA').AsString := DBGrid4.Columns[1].Field.Text;
        DM.DataModule1.QInsertProdutosMaterias.ParamByName('QTDE_MATERIA').AsFloat:= StrToFloat(DBGrid4.Columns[3].Field.Text);
        DM.DataModule1.QInsertProdutosMaterias.ExecSQL;
      end;



    DBGrid4.DataSource.DataSet.Next;
  end;

   DBGrid4.Enabled:=FALSE;
end;



procedure TForm1.DBGrid2CellClick(Column: TColumn);
begin
  ListaMateriaPrimaProduto();
end;

procedure TForm1.DBGrid4DblClick(Sender: TObject);
begin
  //if ((Sender as TDBGrid).DataSource.Dataset.IsEmpty) then
  //  Exit;

  DM.DataModule1.CDSListaMateriais.Edit;

  DM.DataModule1.CDSListaMateriais.FieldByName('selecao').AsInteger:= IfThen(DM.DataModule1.CDSListaMateriaisselecao.AsInteger = 1, 0, 1);

  DM.DataModule1.CDSListaMateriais.Post;
end;


procedure TForm1.DBGrid4DrawColumnCell(Sender: TObject; const Rect: TRect;
  DataCol: Integer; Column: TColumn; State: TGridDrawState);
  var check: Integer;
      R: TRect;
begin

  inherited;

  if ((Sender as TDBGrid).DataSource.DataSet.IsEmpty) then
  begin
    Exit;
  end;
  if Column.FieldName= 'selecao' then
  begin
    TDBGrid(Sender).Canvas.FillRect(Rect);

    if (DM.DataModule1.CDSListaMateriais.FieldByName('selecao').AsInteger = 1) then
    begin
      check:= DFCS_CHECKED;
    end
    else
    begin
      check:= 0;
    end;

    R := Rect;
    InflateRect(R, -2, -2); {DIMINUIR TAMANHO DO CHECKBOX}
    DrawFrameControl(TDBGrid(Sender).Canvas.Handle, R, DFC_BUTTON, DFCS_BUTTONCHECK or check);

  end;
end;
//////////////////////////////////////////




procedure TForm1.FormShow(Sender: TObject);
begin

 DM.DataModule1.QMateriaPrima.Open;
 DM.DataModule1.CDSMateriaPrima.Open;

 DM.DataModule1.QProtudos.Open;
 DM.DataModule1.CDSProdutos.Open;

 StatusBar(DM.DataModule1.CDSMateriaPrima);
 StatusBar(DM.DataModule1.CDSProdutos);


end;





//BUTTONS MATERIA PRIMA
procedure TForm1.Frame21btAlterarClick(Sender: TObject);
begin
 DM.DataModule1.CDSMateriaPrima.Edit;
 StatusBar(DM.DataModule1.CDSMateriaPrima);
 DBEdit2.SetFocus;
end;

procedure TForm1.Frame21btAnteriorClick(Sender: TObject);
begin
  DM.DataModule1.CDSMateriaPrima.Prior;
end;

procedure TForm1.Frame21btCancelarClick(Sender: TObject);
begin
  DM.DataModule1.CDSMateriaPrima.Cancel;
  StatusBar(DM.DataModule1.CDSMateriaPrima);
end;

procedure TForm1.Frame21btExlcuirClick(Sender: TObject);
begin

  if Application.MessageBox (Pchar ('Deseja excluir o registro ?'), 'Confirmação', MB_USEGLYPHCHARS + MB_DEFBUTTON2) = mrYes then
  begin
    DM.DataModule1.CDSMateriaPrima.Delete;
    StatusBar(DM.DataModule1.CDSMateriaPrima);
  end;

end;

procedure TForm1.Frame21btNovoClick(Sender: TObject);
begin
  DM.DataModule1.CDSMateriaPrima.Append;
  StatusBar(DM.DataModule1.CDSMateriaPrima);
  DBEdit2.SetFocus;
end;

procedure TForm1.Frame21btProximoClick(Sender: TObject);
begin
  DM.DataModule1.CDSMateriaPrima.Next
end;

procedure TForm1.Frame21btSalvarClick(Sender: TObject);
begin

  DM.DataModule1.CDSMateriaPrima.Post;
  DM.DataModule1.QMateriaPrima.Close;
  DM.DataModule1.CDSMateriaPrima.Close;
  DM.DataModule1.CDSMateriaPrima.Open;

  StatusBar(DM.DataModule1.CDSMateriaPrima);
end;
////////////////////////////





//BUTTON PRODUTOS
procedure TForm1.Frame22btAlterarClick(Sender: TObject);
begin
   DM.DataModule1.CDSProdutos.Edit;
   StatusBar(DM.DataModule1.CDSProdutos);
   DBGrid4.Enabled:= true;
   DBGrid4.DataSource.DataSet.Close;
   DBGrid4.DataSource.DataSet.Open;
   NomeProduto.SetFocus;
   ListaMateriaPrimaProduto();
   AlterarListaMateriaPrimaProduto();


end;

procedure TForm1.Frame22btAnteriorClick(Sender: TObject);
begin
   ListaMateriaPrimaProduto();
   DM.DataModule1.CDSProdutos.Prior;
end;

procedure TForm1.Frame22btCancelarClick(Sender: TObject);
begin
   DM.DataModule1.CDSProdutos.Cancel;
   StatusBar(DM.DataModule1.CDSProdutos);
   DBGrid4.Enabled:= false;
   DBGrid4.DataSource.DataSet.Close;
   DBGrid4.DataSource.DataSet.Open;

end;

procedure TForm1.Frame22btExlcuirClick(Sender: TObject);
begin
    if Application.MessageBox (Pchar ('Deseja excluir o registro ?'), 'Confirmação', MB_USEGLYPHCHARS + MB_DEFBUTTON2) = mrYes then
  begin
    DM.DataModule1.CDSProdutos.Delete;
    StatusBar(DM.DataModule1.CDSProdutos);
  end;
end;

procedure TForm1.Frame22btNovoClick(Sender: TObject);
begin
    DM.DataModule1.CDSProdutos.Append;
    StatusBar(DM.DataModule1.CDSProdutos);
    DBGrid4.Enabled:=true;
    DBGrid4.DataSource.DataSet.Close;
    DBGrid4.DataSource.DataSet.Open;
    NomeProduto.SetFocus;
end;

procedure TForm1.Frame22btProximoClick(Sender: TObject);
begin
   ListaMateriaPrimaProduto();
   DM.DataModule1.CDSProdutos.Next;
end;

procedure TForm1.Frame22btSalvarClick(Sender: TObject);
begin
     DM.DataModule1.CDSProdutos.Post;
     InsertMateriaPrimaProduto;
     DM.DataModule1.QProtudos.Close;
     DM.DataModule1.CDSProdutos.Close;
     DM.DataModule1.CDSProdutos.Open;

     StatusBar(DM.DataModule1.CDSProdutos);
end;
//.......................





//STATUS DOS MENUS
procedure TForm1.SpeedButton1Click(Sender: TObject);
begin

 DM.DataModule1.SQLQuery1.Close;
 DM.DataModule1.SQLQuery1.Open;
 DM.DataModule1.ClientDataSet1.Refresh;

end;

procedure TForm1.StatusBar(ds: TDataSet);
begin
    if TabbedNotebook1.ActivePage = 'Matéria Prima' then
    begin
      Frame21.btNovo.Enabled    := not(ds.State in [dsEdit, dsInsert]);
      Frame21.btAlterar.Enabled := not(ds.State in [dsEdit, dsInsert]) and not (ds.IsEmpty);
      Frame21.btSalvar.Enabled  := (ds.State in [dsEdit, dsInsert]);
      Frame21.btExlcuir.Enabled := not(ds.State in [dsEdit, dsInsert]) and not (ds.IsEmpty);
      Frame21.btCancelar.Enabled:= (ds.State in [dsEdit, dsInsert]);
      Frame21.btAnterior.Enabled:= not(ds.State in [dsEdit, dsInsert]) and not(ds.IsEmpty);
      Frame21.btProximo.Enabled := not(ds.State in [dsEdit, dsInsert]) and not(ds.IsEmpty);
      Panel1.Enabled            := (ds.State in [dsEdit, dsInsert]);
      DBCheckBox1.Enabled       := (ds.State in [dsEdit, dsInsert]);
    end;

    if TabbedNotebook1.ActivePage = 'Produtos' then
    begin
      Frame22.btNovo.Enabled    := not(ds.State in [dsEdit, dsInsert]);
      Frame22.btAlterar.Enabled := not(ds.State in [dsEdit, dsInsert]) and not (ds.IsEmpty);
      Frame22.btSalvar.Enabled  := (ds.State in [dsEdit, dsInsert]);
      Frame22.btExlcuir.Enabled := not(ds.State in [dsEdit, dsInsert]) and not (ds.IsEmpty);
      Frame22.btCancelar.Enabled:= (ds.State in [dsEdit, dsInsert]);
      Frame22.btAnterior.Enabled:= not(ds.State in [dsEdit, dsInsert]) and not(ds.IsEmpty);
      Frame22.btProximo.Enabled := not(ds.State in [dsEdit, dsInsert]) and not(ds.IsEmpty);
      PanelProdutos.Enabled            := (ds.State in [dsEdit, dsInsert]);
      CheckAtivoProdutos.Enabled       := (ds.State in [dsEdit, dsInsert]);
    end;



end;



procedure TForm1.TabbedNotebook1Click(Sender: TObject);
begin

 if TabbedNotebook1.ActivePage = 'Produtos' then
 begin

   DM.DataModule1.CDSListaMateriais.Close;
   DM.DataModule1.CDSListaMateriais.Open;
   ListaMateriaPrimaProduto();
 end;




 StatusBar(dm.DataModule1.CDSMateriaPrima);
 StatusBar(dm.DataModule1.CDSProdutos);

 DM.DataModule1.SQLQuery1.Close;
 DM.DataModule1.SQLQuery1.Open;
 DM.DataModule1.ClientDataSet1.Close;
 DM.DataModule1.ClientDataSet1.Open;
 DM.DataModule1.ClientDataSet1.Refresh;
end;

end.
